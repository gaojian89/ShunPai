<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <RelativeLayout
        android:id="@+id/activity_detail_video_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </RelativeLayout>
    <ImageView
        android:id="@+id/activity_detail_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/home_gray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <com.lhh.ptrrv.library.PullToRefreshRecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_detail_list"
        android:layout_below="@id/activity_detail_video_parent"
        />
</RelativeLayout>

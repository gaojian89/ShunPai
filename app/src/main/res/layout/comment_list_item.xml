<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/comment_list_item_header"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="10dp"
        android:background="@mipmap/comment_header"
        android:scaleType="centerCrop"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/comment_list_item_header">
        <TextView
            android:id="@+id/comment_list_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="被修罗"
            android:textColor="@color/colorGray2"
            android:textSize="@dimen/text_size_14"
            android:singleLine="true"
            />
        <TextView
            android:id="@+id/comment_list_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="济南的纳税大户"
            android:textColor="@color/colorGray"
            android:textSize="@dimen/text_size_14"
            />
        <TextView
            android:id="@+id/comment_list_item_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1970年01月01日 08:33:36"
            android:textColor="@color/colorGray2"
            android:textSize="@dimen/text_size_14"
            android:singleLine="true"
            android:gravity="right"
            />

    </LinearLayout>

</RelativeLayout>